@model List<News>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="header1">
    <div class="News">
        <div class="News1" data-aos="fade-down"
             data-aos-easing="ease"
             data-aos-duration="2000">
            <h1>Recent Press and Highlights</h1>
            <p>Lorem ipsum dolor, sit amet consectetur adipisicing elit. Autem quam officiis consectetur maiores corrupti eligendi Lorem ipsum dolor sit amet, consectetur adipisicing elit. Nobis laborum, libero mollitia error facilis, quisquam inventore possimus voluptatibus, pariatur quod temporibus</p>
        </div>
        <div class="News2" data-aos="fade-down"
             data-aos-easing="ease"
             data-aos-duration="2000">
            <h2>The Latest News</h2>
            <div class="block" data-aos="fade-down"
                 data-aos-easing="ease"
                 data-aos-duration="2000">

                @foreach (var item in Model)
                {
                    <div class="News3" @item.NewsId>
                    <img src="/img/@item.NewsImage" alt="">
                    <div class="news-text">
                        <h3>@item.NewsTitle</h3>
                        <p>@item.NewsText</p>
                        <span><i class="fa-solid fa-calendar"></i>@item.NewsDate</span>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</header>
<script>
    $(".lang").click(function () {
        $(".setting").fadeToggle()
        $(".nav-responsive").hide()
    })
    </script>

<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
   
    AOS.init();
</script>