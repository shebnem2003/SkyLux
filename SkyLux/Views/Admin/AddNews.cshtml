@model News

@{
    Layout = null;
}

@{
    TempData["PostToken"] = TempData["Token"];
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js"></script>
    <title>Document</title>
</head>
<body>

<header class="addnews">
    <div class="items">
        <div class="item">
            <div class="between">
                    <div class="logo1">
                        <img class="logo-image-1" src="/img/logo1.png" alt="">
                        <a href="/Home/Index"><h1>SkyLux</h1></a>
                    </div>
                    <a href="/Admin/UserPanel"><i class="fa-solid fa-user"></i><span> User</span></a>
                    <a href="/Admin/NewsPanel"><i class="fa-regular fa-newspaper"></i><span> News</span></a>
                    <a href="/Admin/AdminPanel"><i class="fa-solid fa-clipboard-list"></i><span> Tickets</span></a>
                    <a href="/Admin/Contact"><i class="fa-solid fa-phone"></i><span> Contact</span></a>
                    <a href="/Admin/Basket"><i class="fa-solid fa-credit-card"></i><span> Basket</span></a>
            </div>
                <a href="/Home/Index" class="bracket"><i class="fa-solid fa-arrow-right-from-bracket"></i> Exit</a>
        </div>
        <div class="newadd">
            <h2>The Lastest News</h2>
                <form asp-action="AddNews" asp-controller="Admin" method="post" enctype="multipart/form-data">
            <div class="Center">
                <div class="center1">
                    <div class="input1">
                        <label>Image</label>
                                <input type="hidden" value="@TempData["Token"]" name="NewsToken" />
                                <input type="file" placeholder="Image" name="Sekil" accept=".png, .jpg" multiple>
                    </div>
                    <div class="input1">
                        <label>Title</label>
                                <input type="hidden" value="@TempData["Token"]" name="NewsToken" />
                                <input type="text" placeholder="Title" asp-for="NewsTitle">
                    </div>
                </div>
                <div class="center2">
                    <div class="input1">
                        <label>Description</label>
                                <input type="hidden" value="@TempData["Token"]" name="NewsToken" />
                                <input type="text" placeholder="Description" asp-for="NewsText">
                    </div>
                    <div class="input1">
                        <label>Date</label>
                                <input type="hidden" value="@TempData["Token"]" name="NewsToken" />
                                <input type="text" placeholder="Date" asp-for="NewsDate">
                    </div>
                </div>
            </div>
            <button>Add</button>
            </form>
        </div>
    </div>
</header>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>